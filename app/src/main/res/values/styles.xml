<resources
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FillWidth" parent="Wrap">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="FillHeight" parent="Wrap">
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="drawerTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
    </style>

    <style name="drawerTextViewSubItem" parent="drawerTextView">
        <item name="android:stateListAnimator">@anim/raise</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/drawer_pressed</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>

    <style name="arenaTierCard" parent="CardView.Dark">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@anim/raise</item>
    </style>

    <style name="arenaTierCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>