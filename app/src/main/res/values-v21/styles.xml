        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="drawerTextViewSubItem" parent="drawerTextView">
        <item name="android:stateListAnimator">@anim/raise</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/drawer_pressed_ripple</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>
</resources>